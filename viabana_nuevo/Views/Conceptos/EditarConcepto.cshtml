@model viabana_nuevo.Models.Concepto

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditarConcepto</title>
</head>
<body>
    <div class="general-pages">
        @using (Html.BeginForm("EditarConcepto", "Conceptos", FormMethod.Post))
        {
            @Html.AntiForgeryToken();

            <h2>Nuevo Concepto de Sueldo/Novedad</h2>
            <div class="form-horizontal" style="margin-top: 5%">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Descripcion, "Nombre del concepto", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @*@Html.ValidationMessageFor(model => model.Descripcion, "Ingrese un nombre para el concepto", new { @class = "text-danger"})*@
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Efecto, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.EnumDropDownListFor(model => model.Efecto, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TipoConcepto, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.EnumDropDownListFor(model => model.TipoConcepto, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Unidad, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.EnumDropDownListFor(model => model.Unidad, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <input type="button" class="btn btn-danger" onclick="location.href='@Url.Action("VerConceptos","Conceptos")'" value="Volver" style="margin-left: 25%" />
                    <input type="submit" class="btn btn-default" value="Guardar" style="margin-left: 5%" />
                </div>

            </div>
        }
    </div>
</body>
</html>
