<div id="titulo" class="estiloHelvetica col-lg-11" style="height:50px"><span class="glyphicon glyphicon-shopping-cart"></span> Nueva compra</div>

<div class="col-lg-5">
    <script src="~/Scripts/compra.js"></script>
    <div class="form-group">
        <div>
            <label class="estiloHelveticaForm">Proveedor</label>
        </div>
        <select class="form-control" style="float: left;" id="listaProveedores">
            @foreach(var proveedor in ViewBag.Proveedores)
            {
                <option>@proveedor</option>
            }
        </select>
        <input type="button" 
               class="btn btn-primary" 
               id="botonVerProductos" 
               style="float:left;" 
               value="Ver Productos"
               data-url="@Url.Action("ListaDeProductos", "Compra", new {index = "param-index"})"
               />
    </div>
    <div id="listaProductos"></div>
</div>
