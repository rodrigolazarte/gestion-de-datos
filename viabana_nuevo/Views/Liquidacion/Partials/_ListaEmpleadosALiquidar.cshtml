@{ 
    Layout = null;
}
@model List<viabana_nuevo.Models.Empleado>

<script src="~/Scripts/liquidacion.js"></script>

<body>
    <table class="table table-hover" id="listaEmpleados">
        <thead>
            <tr>
                <th>Id</th>
                <th>Apellido</th>
                <th>Nombre</th>
                <th>Dias trabajados</th>
                <th>Liquidar</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var empleado in Model)
            {
                <tr>
                    <td>@empleado.Legajo</td>
                    <td>@empleado.Apellido</td>
                    <td>@empleado.Nombre</td>
                    <td><input type="number" class="form-control diasTrabajados" style="width: 100px; height: 25px"/></td>
                    <td><input type="checkbox" value="false" class="liquidar" style="height: 20px; width: 20px"/></td>
                </tr>
            }
        </tbody>
    </table>
</body>
