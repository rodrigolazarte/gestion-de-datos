
<!DOCTYPE html>

@model List<viabana_nuevo.Models.Empleado>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Personal</title>
</head>
<body>
    <div class="general-pages">
        <h2>Lista de empleados</h2>
        <div class="col-lg-12" style="height: 30%">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td><strong>Apellido</strong></td>
                        <td><strong>Nombre</strong></td>
                        <td><strong>Cuenta</strong></td>
                        <td><strong>Fecha de ingreso</strong></td>
                        <td><strong>Categoria</strong></td>
                        <td><strong>Editar</strong></td>
                        <td><strong>Agregar Novedad</strong></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var empleado in Model){
                        <tr>
                            <td>@empleado.Apellido</td>
                            <td>@empleado.Nombre</td>
                            <td></td>
                            <td>@empleado.FechaIngreso</td>
                            <td>@empleado.CategoriaEmpleado.Descripcion</td>
                            <td><a href="@Url.Action("EditarEmpleado", "Personal", new { idEmpleado = empleado.Legajo})"><span class="glyphicon glyphicon-edit editarEmpleado" title="Editar"></span></a></td>
                            <td><a href="@Url.Action("Novedades", "Personal", new { idEmpleado = empleado.Legajo })"><span class="glyphicon glyphicon-plus agregarNovedad" title="Agregar novedad"></span></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-12">
            <h2>Acciones</h2>
            <button class="btn btn-default" onclick="location.href='@Url.Action("Venta", "Venta")'">Editar Categorías</button>
        </div>
    </div>
</body>
</html>
